<div class="col-12">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title">新規登録</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= f.label "姓", for: "last-name" %>
            <%= f.text_field :last_name, class: "form-control", id: "last-name" %>
          </div>
          <div class="form-group col-md-6">
            <%= f.label "名", for: "first-name" %>
            <%= f.text_field :first_name, class: "form-control", id: "first-name" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email, for: "email" %>
          <%= f.email_field :email, class: "form-control", id: "email" %>
        </div>
        <div class="form-group">
          <%= f.label :password, for: "new-password" %>
          <% if @minimum_password_length %>
            <small class="text-muted">
              (<%= @minimum_password_length %>文字以上)
            </small>
          <% end %>
          <%= f.password_field :password, class: "form-control", id: "new-password" %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, for: "password-confirmation" %>
          <%= f.password_field :password_confirmation, class: "form-control", id: "password-confirmation" %>
        </div>
        <div class="form-group">
          <%= f.label "サイトタイトル", for: "site_title" %><br />
          <%= f.text_field :site_title, class: "form-control", id: "site_title" %>
        </div>
        <div class="form-group">
          <%= f.label "サイトアドレス", for: "site_address" %><br />
          <%= f.text_field :site_address, class: "form-control", id: "site_address" %>
        </div>
        <div class="actions text-right">
          <%= f.submit "新規登録", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
